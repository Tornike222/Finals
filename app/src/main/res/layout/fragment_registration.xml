<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="470dp"
        android:layout_height="150dp"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FitOn"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonstyle_linear_login"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="რეგისტრაცია"
            android:textColor="#08289E"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/editName"
                android:layout_width="196dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:hint="სახელი"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:hint="გვარი"
                android:inputType="textPersonName"
                android:textAlignment="center" />


        </LinearLayout>

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_border"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:ems="10"
            android:hint="შეიყვანეთ თქვენი e-Mail"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:ems="10"
            android:hint="შეიყვანეთ პაროლი"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editPassword2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:ems="10"
            android:hint="გაიმეორეთ პაროლი"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textAlignment="center" />


        <CheckBox
            android:id="@+id/acceptedCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="ვეთანხმები აპლიკაციის წესებსა და პირობებს"
            android:textColor="#8E8E8E"
            android:textStyle="bold" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstyle"

            android:text="რეგისტრაცია" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>